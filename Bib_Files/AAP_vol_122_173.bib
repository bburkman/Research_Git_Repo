author = {Rich C. McIlroy and Katherine L. Plant and Usanisa Jikyong and Vũ Hoài Nam and Brenda Bunyasi and Gilbert O. Kokwaro and Jianping Wu and Md. Shamsul Hoque and John M. Preston and Neville A. Stanton},
