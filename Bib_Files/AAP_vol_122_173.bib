@article{VAILLANCOURT2021105832,
title = {Drugs and driving prior to cannabis legalization: A 5-year review from DECP (DRE) cases in the province of Quebec, Canada},
journal = {Accident Analysis \& Prevention},
volume = {149},
pages = {105832},
year = {2021},
issn = {0001-4575},
