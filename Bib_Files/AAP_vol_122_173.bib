@article{ZHAO2022106665,
title = {Heterogeneous overtaking and learning styles with varied EEG patterns in a reinforced driving task},
journal = {Accident Analysis \& Prevention},
volume = {171},
pages = {106665},
year = {2022},
issn = {0001-4575},
