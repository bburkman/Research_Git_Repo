@article{MOUSSA2022106514,
title = {Variance-based global sensitivity analysis for rear-end crash investigation using deep learning},
journal = {Accident Analysis \& Prevention},
volume = {165},
pages = {106514},
year = {2022},
issn = {0001-4575},
doi = {https://doi.org/10.1016/j.aap.2021.106514},
